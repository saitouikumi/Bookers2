<main>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <%= image_tag @user.get_profile_image(100,100) %>
        </tr>
        <tr>
          <th>name：<%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction：<%= @user.introduction %></th>
        </tr>
      </table>
        <div class='row'>
          <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
        </div>
        <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
    <table class="table table-hover table-inverse">
      <h2>Book detail</h2>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(80,80) %>
            <% end %>
              <%= link_to user_path(@user.id) do %>
                <p><%= @book.user.name %></p>
              <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id) %>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  </div>
</main>

