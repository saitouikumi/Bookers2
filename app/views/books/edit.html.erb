<main>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
        <% if @book.errors.any? %>
        <div class="errors_edit">
          <%= @book.errors.count %>errors prohibited this book from being saved:
        </div>
        <div class="errors_message">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" />
        </div>
      <% end %>

      <footer class="footer_edit">
        <%= link_to "Show", book_path(@book.id) %>
        <td>| <a href="/books">Back</a></td>
      </footer>
    </div>
  </div>
  </div>
