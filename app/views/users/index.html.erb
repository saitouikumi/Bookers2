<main>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <% if @book.errors.any? %>
  <div class="errors">
    <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <div class="errors_message">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <br><h2>User info</h2>
      <%= render 'users/user', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
    <table class="table table-hover table-inverse">
      <br><h2>Users</h2>
      <thead>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(80,80) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </div>
</main>
